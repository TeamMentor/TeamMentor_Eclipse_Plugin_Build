		                </dependency>
		                
		                <dependency>
		                          <type>eclipse-plugin</type>
		                          <artifactId>org.codehaus.groovy.eclipse.ui</artifactId>
		                          <version>0.0.0</version>
		                </dependency>
		                
		                <dependency><type>p2-installable-unit</type><artifactId>org.eclipse.rcp.feature.group</artifactId><version>3.7.2</version></dependency>
		                
		                
