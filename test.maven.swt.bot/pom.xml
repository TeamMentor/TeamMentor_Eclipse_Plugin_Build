	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>test.maven.swt.bot</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	<properties>
		<java.awt.headless>true</java.awt.headless>
	</properties>
	<parent>
		<groupId>test.maven</groupId>
		<artifactId>parent.project</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../parent.project</relativePath>
	</parent>
	<repositories>
		<repository>
			<id>groovy-eclipse</id>
			<layout>p2</layout>
			<url>http://dist.codehaus.org/groovy/distributions/greclipse/snapshot/e3.7</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
